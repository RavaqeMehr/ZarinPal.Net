<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <PackageId>ZarinPalNet</PackageId>
    <Version>1.0.0</Version>
    <Authors>Moqavem</Authors>
    <Company>RavaqeMehr</Company>
    <Product>ZarinPalNet</Product>
    <PackRelease>true</PackRelease>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageTags>ZarinPal;pay</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <Copyright>Copyright © ZarinPalNet 2025</Copyright>
    <PackageProjectUrl>https://github.com/RavaqeMehr/ZarinPalNet</PackageProjectUrl>
    <RepositoryUrl>https://github.com/RavaqeMehr/ZarinPalNet</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>ZarinPal.png</PackageIcon>
  </PropertyGroup>

   <ItemGroup>
    <None Include="../ZarinPal.png" Pack="true" PackagePath="/" />
    <None Include="../README.md" Pack="true" PackagePath="/" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Options.ConfigurationExtensions" Version="9.0.0" />
    <FrameworkReference Include="Microsoft.AspNetCore.App" />
  </ItemGroup>

</Project>
